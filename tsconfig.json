{
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "jsx": "react-jsx",
        "outDir": "./dist/",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "module": "preserve",
        "target": "ESNext",
        "allowJs": true,
        "moduleResolution": "node",
        "plugins": [
            {
                "name": "@styled/typescript-styled-plugin"
            }
        ],
        "baseUrl": "./",
        "paths": {
            "Support/*": ["src/support/*"],
            "Elements/*": ["src/elements/*"],
        }
    }
}
